{
  "name": "UMM",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Project UMM",
    "email": "project.umm@gmail.com"
  },
  "description": "Universal Mod Manager",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "next build && electron-builder",
    "electron-pack": "electron-builder -c.extraMetadata.main=electron/main.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-slot": "^1.2.2",
    "@stomp/stompjs": "^7.1.1",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash": "^4.17.16",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.6.2",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "lucide-react": "^0.511.0",
    "next": "15.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shadcn-ui": "^0.9.5",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.7",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "10.4.17",
    "concurrently": "^9.1.2",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "postcss": "8.4.31",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^4.1.7",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.project-umm.app",
    "productName": "UMM",
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public"
    },
    "publish": {
      "provider": "github",
      "owner": "project-umm",
      "repo": "front-end"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/umm.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/umm.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "UMM",
      "installerIcon": "public/umm.ico",
      "uninstallerIcon": "public/umm.ico",
      "installerHeaderIcon": "public/umm.ico",
      "menuCategory": true,
      "runAfterFinish": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "include": "installer.nsh"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/umm.png"
    }
  }
}
